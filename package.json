{
  "name": "universal-llm-slack-hub",
  "version": "1.0.0",
  "description": "Universal LLM Slack Hub - Connect to any AI model through Slack with smart routing, cost optimization, and enterprise features",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t universal-llm-hub .",
    "docker:run": "docker run -p 3000:3000 --env-file .env universal-llm-hub",
    "k8s:deploy": "kubectl apply -f k8s/",
    "stripe:listen": "stripe listen --forward-to localhost:3000/webhook"
  },
  "keywords": [
    "slack",
    "llm",
    "openai",
    "anthropic",
    "groq",
    "claude",
    "gpt",
    "ai",
    "chatbot",
    "enterprise",
    "saas"
  ],
  "author": "Evgeny Goncharov",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@langchain/anthropic": "^0.2.0",
    "@langchain/openai": "^0.2.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^6.11.0",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.11.5",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "groq-sdk": "^0.32.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.2.0",
    "mammoth": "^1.6.0",
    "markdown-it": "^14.0.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "ollama": "^0.5.0",
    "openai": "^4.20.0",
    "pdf-parse": "^1.1.1",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.1.0",
    "sharp": "^0.33.0",
    "stripe": "^13.11.0",
    "typescript": "^5.3.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "@types/cors": "^2.8.19",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bull": "^4.10.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/markdown-it": "^14.0.0",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
