# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret
SLACK_PORT=3000

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-organization-id

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Groq Configuration
GROQ_API_KEY=gsk_your-groq-api-key

# Local Model Configuration (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS=llama2,codellama,mistral

# Custom LLM Endpoints
CUSTOM_LLM_ENDPOINTS=endpoint1_name:http://localhost:8080/v1,endpoint2_name:https://api.example.com/v1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/llm_hub
DATABASE_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug
API_RATE_LIMIT=100
MAX_CONTEXT_LENGTH=8000
DEFAULT_LLM_PROVIDER=auto

# Monitoring Configuration
HEALTH_PORT=3001
METRICS_PORT=3002
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_ANTHROPIC=true
ENABLE_GROQ=true
ENABLE_OLLAMA=true
ENABLE_CUSTOM_ENDPOINTS=true
ENABLE_FILE_ANALYSIS=true
ENABLE_CONVERSATION_MEMORY=true
ENABLE_USAGE_ANALYTICS=true

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
ALLOWED_DOMAINS=yourdomain.com,anotherdomain.com
CORS_ORIGINS=http://localhost:3000,https://yourapp.com

# Cost Management
MONTHLY_BUDGET_USD=1000
COST_ALERT_THRESHOLD=0.8
AUTO_FALLBACK_ON_BUDGET=true

# Smart Routing Configuration
ROUTING_STRATEGY=cost_performance
PERFORMANCE_WEIGHT=0.6
COST_WEIGHT=0.4